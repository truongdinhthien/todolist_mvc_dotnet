@model TodoSaveModel;

@{
    ViewData["Title"] = "Create";
}

<h1>Tạo mới</h1>

<h4>Công việc</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label asp-for="Title" class="control-label">Tiêu đề</label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Content" class="control-label">Nội dung</label>
                        <input asp-for="Content" class="form-control" />
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Scope" class="control-label">Phạm vi</label>
                        <select asp-for="Scope" asp-items="Html.GetEnumSelectList<TodoScope>()" class="form-control">
                            <option selected="selected" value="">Please select</option>
                        </select>
                        <span asp-validation-for="Scope" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-outline-primary">
                            <i class="fas fa-plus-square"></i> Tạo mới
                        </button>
                    </div>
                    <div class="form-group">
                        <a class="btn btn-warning" asp-action="Index">
                            <i class="fas fa-arrow-left"></i> Trở về
                        </a>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label asp-for="StartDate" class="control-label">Ngày bắt đầu</label>
                        <input asp-for="StartDate" class="form-control" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DueDate" class="control-label">Ngày hết hạn</label>
                        <input asp-for="DueDate" class="form-control" />
                        <span asp-validation-for="DueDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="File" class="control-label">Tập tin đính kèm</label>
                        <input asp-for="File" type="file" class="form-control-file" />
                        <span asp-validation-for="File" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SelectedListUserId" class="control-label">Người làm chung</label>
                        <select asp-for="SelectedListUserId" asp-items="@ViewBag.ListUsers" class="form-control" id="select2-users">

                        </select>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
